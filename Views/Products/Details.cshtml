@model LAPTRINHWEB.Models.Products

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="font-weight: bold; text-align: center">CHI TIẾT SẢN PHẨM</h2>

<div style="margin-left: 80px; margin-left: 15%">
    <hr />
    <table>
        <thead>
            <tr>
                <th style="border:1px solid black; padding:16px;">Mã sản phẩm</th>
                <th style="border:1px solid black; padding:16px;  width: 400px;">@Html.DisplayFor(m => m.Id)</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th style="border:1px solid black; padding:16px;">Tên sản phẩm</th>
                <th style="border:1px solid black; padding:16px;">@Html.DisplayFor(m => m.Name)</th>
            </tr>            
        </tbody>
        <tbody>
            <tr>
                <th style="border:1px solid black; padding:16px;">Chi tiết</th>
                <th style="border:1px solid black; padding:16px;">@Html.DisplayFor(m => m.Detail)</th>
            </tr>
        </tbody>
        <tbody>
            <tr>
                <th style="border:1px solid black; padding:16px;">Giá cả</th>
                <th style="border:1px solid black; padding:16px;">@Html.DisplayFor(m => m.PriceBuy)</th>
            </tr>
        </tbody>
        <tbody>
            <tr>
                <th style="border:1px solid black; padding:16px;">Hình ảnh</th>
                <th style="border:1px solid black; padding:16px;"><img src="~/IMG/Products/@Model.Img" alt="Alternate Text" width="400" height="200" /></th>
            </tr>
        </tbody>          
        <tbody>
            <tr>
                <th style="border:1px solid black; padding:16px;">Ngày đăng</th>
                <th style="border:1px solid black; padding:16px;">@Html.DisplayFor(m => m.Created_At)</th>
            </tr>
        </tbody>
    </table>
</div>
<p style="margin-top: 30px; font-weight: bold; margin-left: 330px">
   <a href="~/Carts/GioHang" class="btn btn-warning"  style="font-weight: bold"><i class="fa fa-angle-left"></i> Trở về giỏ hàng</a>
</p>
