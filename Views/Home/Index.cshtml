@model IEnumerable<LAPTRINHWEB.Models.ProductSales>
@{
    var count = Model.Count();
    ViewBag.Title = "Home Page";
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <link href="~/Public/CSS/Home.css" rel="stylesheet" />
}
<div class="container" style="width: 1000px;  margin-top: 40px">   
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                <img src="~/IMG/slider_1111.jpg" alt="Los Angeles" style="width: 100%;">
            </div>

            <div class="item">
                <img src="~/IMG/slider_2.jpg" alt="Chicago" style="width: 100%;">
            </div>

            <div class="item">
                <img src="~/IMG/slider_3.png" alt="New york" style="width: 100%;">
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
<div style="margin-top: 30px;width: 1000px"> 
    <div class="row">
        <div class="col-md-4 lala">
            <a href="~/Home/Tintuc">
                <img src="~/IMG/khuyen-mai-freshfoods.jpg" alt="Avatar" class="image">
                <div class="overlay">Khuyến mãi</div>
            </a>
        </div>
        <div class="col-md-4 lala" >
            <a href="~/Home/Camnangsudung">
                <img src="~/IMG/cam-nang-nau-an-freshfoods.jpg" alt="Avatar" class="image">
                <div class="overlay">Cẩm nang sử dụng</div>
            </a>
            
        </div>
        <div class="col-md-4 lala">
            <a href="~/Home/chinhsachvanchuyen">
                <img src="~/IMG/giaohangnhanh-freshfoods.jpg" alt="Avatar" class="image">
                <div class="overlay">Giao hàng nhanh</div>
            </a>
            
        </div>
    </div>
</div>
<div style="margin-top: 30px">
    <h4 style="color: forestgreen; font-size: 20px; font-weight: bold">Thông báo giá bán lẻ tại cửa hàng</h4>
    <video width="1000" controls autoplay loop>
        <source src="~/video/video.mp4" type="video/mp4">
    </video>
</div>
<div>
    <h3 style="text-align:center; color: forestgreen; font-weight: bold">SẢN PHẨM GIẢM GIÁ</h3>
    <div>
        @foreach (var item in Model)
        {
            <div class="card card-fixed">
                <img style="width: 100%; height: auto;" src="~/IMG/Products/@item.Products.Img" class="card-img-top" alt="@item.Products.Name">
                <div class="card-body" style="padding-bottom: 50px">
                    <h5 class="card-title" style="height:45px; text-align:center">
                        <strong>@item.Products.Name</strong>
                    </h5>
                    <div class="row">
                        <div class="col-sm-4 col-md-6 card-text" style="font-size:18px; text-decoration:line-through"> <strong>@item.Products.PriceBuy VNĐ</strong> </div>
                        <div class="col-sm-4 col-md-6 card-text" style="color: red; font-size: 18px;">@item.PriceSale VNĐ</div>
                    </div>
                    <a style="width:100%" href="@Url.Action("Themgiohang","Carts", new { @Masp = item.ProductId, @strUrl = Request.Url.ToString()})" class="btn btn-primary">Mua hàng</a>
                </div>
            </div>
        }
    </div>
</div>
<div>
    @if (count < 5)
    {
        <a href="~/Products/Index/0" class="btn btn-success" style="margin-right: 340px; margin-bottom: 20px;clear: left; float: right">Xem thêm sản phẩm</a>
    }
</div>